{
  "name": "alpinejs-booster",
  "version": "1.0.0-alpha",
  "description": "alpinejs-booster provides additional directives, magic functions, and utilities for a more productive development experience",
  "main": "index.js",
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c && terser dist/alpinejs-booster.js --config-file terser.config.json -o dist/alpinejs-booster.min.js",
    "clean": "rimraf dist coverage",
    "test": "vitest run",
    "test:dev": "vitest",
    "coverage": "vitest run --coverage"
  },
  "author": "rameel",
  "license": "MIT",
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.6",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.1",
    "jsdom": "^23.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.2",
    "terser": "^5.26.0",
    "vitest": "^1.1.0"
  }
}
